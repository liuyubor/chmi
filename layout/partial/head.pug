- var title = page.title
if is_home()
  - title=config.title
else if is_category()
  - title=__('category') + '|'+page.category
else if is_tag()
  - title=__('tag') + '|'+page.tag
else if is_archive()
  - title=__('archive')
  if is_month()
    - title+='|' + page.year + '/' + page.month
  if is_year()
    - title+='|' + page.year

title!= title ? title : config.title

- var tags=page.tags

if(tags && tags.length)
  - tags=tags.data.map(function(doc) {
  - return doc.name
  - }).join(',')
  meta(name="keywords" content=tags)
